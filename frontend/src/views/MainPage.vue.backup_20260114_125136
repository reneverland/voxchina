                v-model="editForm.fact_table_json"
                rows="10"
                class="w-full rounded-lg border-slate-200 focus:ring-2 focus:ring-indigo-500/20 focus:border-indigo-500 font-mono text-sm"
              ></textarea>
              <p v-if="editJsonError" class="text-xs text-red-500 mt-1">{{ editJsonError }}</p>
            </div>
          </div>
        </div>
        

          <button 
            @click="closeEditDialog"
            class="px-4 py-2 bg-slate-100 hover:bg-slate-200 text-slate-700 rounded-lg transition-colors"
          >
            Cancel
          </button>
          <button 
            @click="saveEdit"
            :disabled="saving"
            class="px-4 py-2 bg-indigo-600 hover:bg-indigo-700 text-white rounded-lg transition-colors disabled:opacity-50 flex items-center"
          >
            <Loader2 v-if="saving" class="w-4 h-4 mr-2 animate-spin" />
